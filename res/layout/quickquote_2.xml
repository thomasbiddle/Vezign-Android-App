<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/VezignLight"
    android:id="@+id/home_root"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/textView1"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:paddingTop="15dp"
        android:paddingBottom="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ReBrand Your Company"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:text="Get a new Logo &amp; brand development package with your new website. Includes Logo, up to 5 different business card designs, letterhead, envelopes, and more! ($750)"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RadioGroup
        android:layout_marginLeft="5dp"
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/noRB"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:clickable="true"
            android:onClick="showForms"
            android:text="No thanks!" />

        <RadioButton
            android:id="@+id/yesRB"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="showForms"
            android:text="Yes, please!" />
    </RadioGroup>

    <EditText
        android:id="@+id/editText1"
        android:hint="Company Name &amp; industry"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </EditText>

    <EditText
        android:id="@+id/editText2"
        android:hint="What is your industry?"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/editText3"
        android:hint="Please tell us about your company &amp; brand. How would you want other people to describe it?"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:onClick="nextPage"
        android:layout_marginRight="20dp"
        android:text="   Next   " />

</LinearLayout>